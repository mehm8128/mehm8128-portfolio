---
import { getCollection } from "astro:content";
import AdvCalendar from "../../components/layouts/AdvCalendar.astro";

const posts = (await getCollection("adv2024")).toSorted(
  (a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf()
);

const internalPosts = posts.map((post) => ({
  title: post.data.title,
  publishedDate: post.data.publishedDate,
  url: `/adv2024-reactaria/${post.id}/`,
}));
---

<AdvCalendar
  year={2024}
  title="React Aria"
  posts={internalPosts}
  endDate={25}
/>
