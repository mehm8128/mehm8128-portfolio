---
import { Image } from "astro:assets";
import Background from "../components/index/Background.astro";
import Blog from "../components/index/Blog.astro";
import Certification from "../components/index/Certification.astro";
import Contribution from "../components/index/Contribution.astro";
import SocialLinks from "../components/index/SocialLinks.astro";
import Layout from "../components/layouts/Layout.astro";
import { ICON_DESCRIPTION, SITE_TITLE } from "../consts";
import { getRandomId } from "../functions/getRandomId";

const id = getRandomId();
---

<Layout title={SITE_TITLE}>
  <section class="hero" aria-labelledby={id}>
    <div class="hero-header">
      <Image
        src="/single_color_circle.png"
        alt={ICON_DESCRIPTION}
        class="hero-avatar"
        width={80}
        height={80}
      />
      <h1 class="hero-title" id={id}>mehm8128</h1>
    </div>
    <div class="hero-content">
      <div class="hero-description">
        <p>Frontend Engineer at Cybozu, WAIC WG2</p>
        <p>Interested in Accessibility, HTML, and UI</p>
      </div>
      <SocialLinks />
    </div>
  </section>

  <div class="sections">
    <Blog />
    <Background />
    <Contribution />
    <Certification />
  </div>
</Layout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    place-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .hero-header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .hero-content {
    max-width: 32rem;
    margin: 0 auto;
  }

  .hero-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 3px solid var(--color-accent);
    animation: spin 2s ease-out;
  }
  .hero-avatar:hover {
    animation: spin 2s linear infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-avatar,
    .hero-avatar:hover {
      animation: none;
    }
  }

  .hero-title {
    font-size: var(--font-size-4xl);
    color: var(--color-accent);
  }

  .hero-description {
    text-align: center;
    color: var(--color-muted);
    font-size: var(--font-size-base);
    line-height: var(--line-height-tight);
  }

  .sections {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 640px;
    margin: 0 auto;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(calc(360deg * 4));
    }
  }

  @container (width < 600px) {
    .hero-header {
      gap: 0.75rem;
    }

    .hero-avatar {
      width: 60px;
      height: 60px;
    }

    .sections {
      gap: 1.5rem;
    }
  }
</style>
