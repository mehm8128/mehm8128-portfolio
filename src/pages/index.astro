---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Background from "../components/Index/Background.astro";
import Certification from "../components/Index/Certification.astro";
import Contribution from "../components/Index/Contribution.astro";
import SocialLinks from "../components/Index/SocialLinks.astro";
import Blog from "../components/Index/Blog.astro";
import {
  ICON_DESCRIPTION,
  SITE_DESCRIPTION,
  SITE_IMG,
  SITE_TITLE,
} from "../consts/consts";
import { getRandomId } from "../functions/randomId";

const id = getRandomId();
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION} image={SITE_IMG}>
  <section class="hero" aria-labelledby={id}>
    <div class="hero-header">
      <Image
        src={SITE_IMG}
        alt={ICON_DESCRIPTION}
        class="hero-avatar"
        width={80}
        height={80}
      />
      <h1 class="hero-title" id={id}>mehm8128</h1>
    </div>
    <div class="hero-content">
      <div class="hero-description">
        <p>Frontend Engineer at Cybozu, ex-traP</p>
        <p>Interested in Accessibility, Web Components, and UI</p>
      </div>
      <SocialLinks />
    </div>
  </section>

  <div class="sections">
    <Certification />
    <Blog />
    <Background />
    <Contribution />
  </div>
</Layout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    place-content: center;
    gap: 1rem;
    padding-top: 1rem;
    margin-bottom: 2rem;
    container-type: inline-size;
  }

  .hero-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .hero-content {
    max-width: 32rem;
    margin: 0 auto;
  }

  .hero-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 3px solid var(--color-accent);
    animation: spin 2s ease-out;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-avatar {
      animation: none;
    }
  }

  .hero-title {
    font-size: var(--text-4xl);
    color: var(--color-accent);
  }

  .hero-description {
    text-align: center;
    color: var(--color-muted);
    font-size: var(--text-base);
    line-height: var(--line-height-tight);
  }

  .sections {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(calc(240deg * 6));
    }
  }

  @container (max-width: 768px) {
    .hero-header {
      flex-direction: column;
      gap: 0.75rem;
    }

    .hero-avatar {
      width: 60px;
      height: 60px;
    }

    .hero-title {
      font-size: var(--text-3xl-mobile);
    }

    .hero-description {
      font-size: var(--text-normal);
    }

    .sections {
      gap: 2rem;
    }
  }
</style>
