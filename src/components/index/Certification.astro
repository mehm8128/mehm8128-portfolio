---
import UList from "../UList.astro";
import ListItem from "../ListItem.astro";
import SectionWrap from "../SectionWrap.astro";
import ExternalLink from "../ExternalLink.astro";
import { certifications } from "../../consts/certifications";
---

<SectionWrap headingText="Certifications">
  <UList>
    {
      certifications.map((cert) => (
        <ListItem>
          <ExternalLink href={cert.url}>{cert.name}</ExternalLink>
        </ListItem>
      ))
    }
  </UList>
</SectionWrap>
