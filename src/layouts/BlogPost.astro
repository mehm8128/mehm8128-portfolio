---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../functions/date";
import { SITE_IMG } from "../consts/consts";
import Layout from "./Layout.astro";

// Import blog styles
import "../styles/blog/blog-header.css";
import "../styles/blog/blog-headings.css";
import "../styles/blog/blog-table.css";
import "../styles/blog/blog-details.css";
import "../styles/blog/blog-list.css";
import "../styles/blog/blog-callout.css";
import "../styles/blog/blog-linkcard.css";
import "../styles/blog/blog-misc.css";

type Props = CollectionEntry<"blog">["data"];

const { title, description, publishedDate, updatedDate } = Astro.props;
---

<Layout title={title} description={description} image={SITE_IMG}>
  <article class="blog-post">
    <div class="prose">
      <div class="title">
        <div class="date">
          <time datetime={publishedDate.toISOString()}>
            {formatDate(publishedDate)}
          </time>
          {
            updatedDate && (
              <div class="last-updated-on">
                Last updated on {formatDate(updatedDate)}
              </div>
            )
          }
        </div>
        <h1>{title}</h1>
        <hr />
      </div>
      <div class="content">
        <slot />
      </div>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 2rem 1rem;
    container-type: inline-size;
  }

  .prose {
    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    color: var(--color-text);
    line-height: var(--line-height-base);
  }

  .content {
    font-size: var(--text-base);
  }

  /* Container queries for responsive design */
  @container (max-width: 600px) {
    .blog-post {
      padding: 1rem;
    }

    .content {
      font-size: var(--text-h4-mobile);
    }
  }
</style>
