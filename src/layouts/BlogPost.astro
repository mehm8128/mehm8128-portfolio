---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../functions/date";
import { SITE_IMG } from "../consts/consts";
import Layout from "./Layout.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, publishedDate, updatedDate } = Astro.props;
---

<Layout title={title} description={description} image={SITE_IMG}>
  <article class="blog-post">
    <div class="prose">
      <div class="title">
        <div class="date">
          <time datetime={publishedDate.toISOString()}>
            {formatDate(publishedDate)}
          </time>
          {
            updatedDate && (
              <div class="last-updated-on">
                Last updated on {formatDate(updatedDate)}
              </div>
            )
          }
        </div>
        <h1>{title}</h1>
        <hr />
      </div>
      <div class="content">
        <slot />
      </div>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 2rem 1rem;
    container-type: inline-size;
  }

  .prose {
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
    color: var(--color-text);
    line-height: 1.7;
  }

  .title {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    text-align: center;
  }

  .title h1 {
    margin: 1rem 0 0 0;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.2;
  }

  .date {
    margin-bottom: 1rem;
    color: var(--color-muted);
    font-family: var(--font-mono);
    font-size: 0.9rem;
  }

  .last-updated-on {
    font-style: italic;
    margin-top: 0.5rem;
    font-size: 0.85rem;
  }

  .title hr {
    border: none;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-accent),
      transparent
    );
    margin: 1rem auto 0;
    width: 80%;
  }

  .content {
    font-size: 1.1rem;
  }

  /* Blog content styling */
  .content :global(h2) {
    color: var(--color-accent);
    margin: 2rem 0 1rem 0;
    font-size: 1.8rem;
  }

  .content :global(h3) {
    color: var(--color-text);
    margin: 1.5rem 0 0.75rem 0;
    font-size: 1.4rem;
  }

  /* Icon link styling - hidden by default, shown on hover */
  .content :global(h2 a:not(:hover, :focus) .icon-link),
  .content :global(h3 a:not(:hover, :focus) .icon-link) {
    display: none;
  }

  .content :global(p) {
    margin: 1rem 0;
    white-space: pre-wrap;
  }

  .content :global(a) {
    color: var(--color-accent);
  }

  .content :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .content :global(code) {
    background: #e5e7eb;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: var(--color-surface);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    margin: 1.5rem 0;
    padding: 0.5rem 0 0.5rem 1rem;
    background: var(--color-surface);
    border-radius: 0 0.25rem 0.25rem 0;
  }

  /* Table styling */
  .content :global(table) {
    border-collapse: collapse;
    width: 100%;
    margin: 1.5rem 0;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .content :global(th),
  .content :global(td) {
    border: 1px solid var(--color-border);
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .content :global(th) {
    background: var(--color-surface);
    font-weight: 600;
    color: var(--color-text);
  }

  .content :global(tr:nth-child(even)) {
    background: var(--color-surface);
  }

  /* Italic styling */
  .content :global(em) {
    font-style: italic;
    color: var(--color-text);
  }

  /* Details/Summary styling */
  .content :global(details) {
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1rem;
    margin: 1.5rem 0;
    background: var(--color-surface);
  }

  .content :global(summary) {
    font-weight: 600;
    cursor: pointer;
    color: var(--color-accent);
    user-select: none;
    position: relative;
    padding-left: 1.5rem;
  }

  .content :global(summary::before) {
    content: "â–¶";
    position: absolute;
    left: 0;
    transition: transform 0.2s ease;
  }

  .content :global(details[open] summary::before) {
    transform: rotate(90deg);
  }

  .content :global(summary:hover) {
    color: var(--color-accent-hover);
  }

  .content :global(details[open] summary) {
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  /* List styling */
  .content :global(ul),
  .content :global(ol) {
    margin: 1rem 0;
    padding-left: 1rem;
  }

  .content :global(li) {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  .content :global(ul li) {
    list-style-type: disc;
  }

  .content :global(ol li) {
    list-style-type: decimal;
  }

  .content :global(ul ul li) {
    list-style-type: circle;
  }

  .content :global(ol ol li) {
    list-style-type: lower-alpha;
  }

  /* Container queries for responsive design */
  @container (max-width: 768px) {
    .blog-post {
      padding: 1rem;
    }

    .title h1 {
      font-size: 2rem;
    }

    .content {
      font-size: 1rem;
    }

    .content :global(h2) {
      font-size: 1.5rem;
    }

    .content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
